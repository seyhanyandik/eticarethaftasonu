@using eticarethaftasonu.Dto;
@model AppUserEditDto
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}

<section class="vh-100">
    <div class="container-fluid h-custom">
        <div class="row d-flex justify-content-center align-items-center h-100">
           
            <div class="col-md-12 col-lg-10 col-xl-6 ">
                <form method="post" asp-action="Index" asp-controller="MyAccount">
                    



                    <!-- Email input -->
                    <div class="form-outline mb-4">
                        <input type="text" name="FirstName" id="form3Example3" class="form-control form-control-lg"
                               placeholder="Adınzı Girin" asp-for="FirstName" />

                    </div>
                    <div class="form-outline mb-4">
                        <input type="text" name="LastName" asp-for="LastName" id="form3Example3" class="form-control form-control-lg"
                               placeholder="Soyadınızı Girin" />

                    </div>
                    
                    <div class="form-outline mb-4">
                        <input type="text" name="Email" asp-for="Email" id="form3Example3" class="form-control form-control-lg"
                               placeholder="Email Adını Girin" />

                    </div>
                    <div class="form-outline mb-4">
                        <input type="text" name="Password" asp-for="Password" id="form3Example3" class="form-control form-control-lg"
                               placeholder="Şifrenizi Adını Girin" />

                    </div>
                    <div class="form-outline mb-4">
                        <input type="text" name="ConfirmPassword" asp-for="ConfirmPassword" id="form3Example3" class="form-control form-control-lg"
                               placeholder="Şifrenizi Tekrar Girin" />

                    </div>

                    <div class="error">

                        <div class="text-danger" asp-validation-summary="ModelOnly" />

                    </div>


                   

                    <div class="text-center text-lg-start mt-4 pt-2">
                        <button type="submit" class="btn btn-primary btn-lg"
                                style="padding-left: 2.5rem; padding-right: 2.5rem;">
                            Düzelt
                        </button>

                    </div>

                </form>
            </div>
        </div>
    </div>

</section>

